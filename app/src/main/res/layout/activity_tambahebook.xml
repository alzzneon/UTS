<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/ebookNamaEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nama Ebook"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/ebookPenerbitEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Penerbit"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/ebookNamaEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/ebookJenisEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Jenis Ebook"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/ebookPenerbitEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Tombol Tambah -->
    <Button
        android:id="@+id/ebookTambahButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tambah Ebook"
        app:layout_constraintTop_toBottomOf="@id/ebookJenisEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
